<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="100dp"
    android:paddingStart="100dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_chat_right"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/iv_icon"
        android:layout_toStartOf="@+id/iv_icon"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_text_right"
        tools:text="@string/app_name"/>

    <ImageView
        android:id="@+id/iv_photo"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_icon"
        android:layout_toStartOf="@+id/iv_icon"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:transitionName="shareImageView"
        tools:src="@drawable/ic_chat_right"/>

</RelativeLayout>